@model EasyLearn.Controllers.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register - EasyLearn</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/modern-aesthetic.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 2rem 0;
        }
        
        .auth-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            animation: slideInUp 0.8s ease-out;
        }
        
        .auth-left {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.9) 0%, rgba(118, 75, 162, 0.9) 100%);
            color: white;
            padding: 3rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }
        
        .auth-left::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            animation: float 8s ease-in-out infinite;
        }
        
        .auth-right {
            padding: 3rem;
        }
        
        .form-floating {
            margin-bottom: 1.5rem;
        }
        
        .form-floating > .form-control {
            border: 2px solid #e9ecef;
            border-radius: 15px;
            padding: 1rem 0.75rem;
            height: auto;
            transition: all 0.3s ease;
        }
        
        .form-floating > .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            transform: translateY(-2px);
        }
        
        .form-floating > label {
            padding: 1rem 0.75rem;
            color: #6c757d;
        }
        
        .btn-auth {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 15px;
            padding: 15px 30px;
            font-weight: 600;
            color: white;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .btn-auth::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }
        
        .btn-auth:hover::before {
            left: 100%;
        }
        
        .btn-auth:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        }
        
        .btn-outline-light {
            border: 2px solid rgba(255,255,255,0.8);
            color: white;
            transition: all 0.3s ease;
        }
        
        .btn-outline-light:hover {
            background: rgba(255,255,255,0.2);
            border-color: white;
            color: white;
            transform: translateY(-2px);
        }
        
        .role-selector {
            display: flex;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }
        
        .role-option {
            flex: 1;
            padding: 1rem;
            border: 2px solid #e9ecef;
            border-radius: 15px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            background: white;
        }
        
        .role-option:hover {
            border-color: #667eea;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        
        .role-option.active {
            border-color: #667eea;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        }
        
        .role-option i {
            font-size: 2rem;
            margin-bottom: 0.5rem;
            color: #667eea;
        }
        
        .floating-icon {
            position: absolute;
            color: rgba(255,255,255,0.1);
            animation: float 6s ease-in-out infinite;
        }
        
        .floating-icon:nth-child(2) { animation-delay: -2s; }
        .floating-icon:nth-child(3) { animation-delay: -4s; }
        
        @@keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .progress-steps {
            display: flex;
            justify-content: center;
            margin-bottom: 2rem;
        }
        
        .step {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background: #e9ecef;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 0.5rem;
            font-weight: bold;
            color: #6c757d;
            transition: all 0.3s ease;
        }
        
        .step.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        
        .step.completed {
            background: #28a745;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-11 col-xl-10">
                <div class="auth-container">
                    <div class="row g-0">
                        <div class="col-lg-5">
                            <div class="auth-left">
                                <div class="text-center mb-4">
                                    <i class="fas fa-user-plus" style="font-size: 4rem; margin-bottom: 1rem;"></i>
                                    <h2 class="fw-bold">Join EasyLearn!</h2>
                                    <p class="opacity-75">Start your learning journey today</p>
                                </div>
                                
                                <div class="mb-4">
                                    <h5>Why Choose EasyLearn?</h5>
                                    <ul class="list-unstyled">
                                        <li class="mb-2"><i class="fas fa-check me-2"></i>Expert-led courses</li>
                                        <li class="mb-2"><i class="fas fa-check me-2"></i>Flexible learning</li>
                                        <li class="mb-2"><i class="fas fa-check me-2"></i>Industry certificates</li>
                                        <li class="mb-2"><i class="fas fa-check me-2"></i>Lifetime access</li>
                                    </ul>
                                </div>
                                
                                <div class="text-center">
                                    <p class="opacity-75 mb-3">Already have an account?</p>
                                    <a href="@Url.Action("Login", "Account")" class="btn btn-outline-light btn-lg" style="border-radius: 15px; padding: 12px 30px; text-decoration: none; display: inline-block;">
                                        Sign In
                                    </a>
                                </div>
                                
                                <i class="fas fa-graduation-cap floating-icon" style="top: 10%; left: 10%; font-size: 3rem;"></i>
                                <i class="fas fa-certificate floating-icon" style="bottom: 20%; right: 15%; font-size: 2.5rem;"></i>
                                <i class="fas fa-chart-line floating-icon" style="top: 60%; left: 20%; font-size: 2rem;"></i>
                            </div>
                        </div>
                        
                        <div class="col-lg-7">
                            <div class="auth-right">
                                <div class="text-center mb-4">
                                    <h3 class="fw-bold text-dark">Create Account</h3>
                                    <p class="text-muted">Fill in your details to get started</p>
                                </div>
                                
                                <div class="progress-steps">
                                    <div class="step active">1</div>
                                    <div class="step">2</div>
                                    <div class="step">3</div>
                                </div>
                                
                                <form asp-action="Register" method="post" id="registerForm" asp-antiforgery="true">
                                    <div asp-validation-summary="All" class="alert alert-danger" style="border-radius: 15px;"></div>
                                    
                                    <!-- Step 1: Role Selection -->
                                    <div class="step-content" id="step1">
                                        <h5 class="mb-3 text-center">Choose Your Role</h5>
                                        <div class="role-selector">
                                            <div class="role-option active" data-role="Student">
                                                <i class="fas fa-user-graduate"></i>
                                                <h6>Student</h6>
                                                <small>Learn from experts</small>
                                            </div>
                                            <div class="role-option" data-role="Instructor">
                                                <i class="fas fa-chalkboard-teacher"></i>
                                                <h6>Instructor</h6>
                                                <small>Teach and inspire</small>
                                            </div>
                                        </div>
                                        <input type="hidden" name="Role" value="Student" id="selectedRole" />
                                        <div class="d-grid">
                                            <button type="button" class="btn btn-auth btn-lg" onclick="nextStep()">
                                                Continue <i class="fas fa-arrow-right ms-2"></i>
                                            </button>
                                        </div>
                                    </div>
                                    
                                    <!-- Step 2: Personal Info -->
                                    <div class="step-content d-none" id="step2">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    <input asp-for="FirstName" class="form-control" placeholder="First Name" required />
                                                    <label asp-for="FirstName"><i class="fas fa-user me-2"></i>First Name</label>
                                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    <input asp-for="LastName" class="form-control" placeholder="Last Name" required />
                                                    <label asp-for="LastName"><i class="fas fa-user me-2"></i>Last Name</label>
                                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="form-floating">
                                            <input asp-for="Email" class="form-control" type="email" placeholder="Email" required />
                                            <label asp-for="Email"><i class="fas fa-envelope me-2"></i>Email Address</label>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="d-flex gap-2">
                                            <button type="button" class="btn btn-outline-secondary btn-lg" onclick="prevStep()">
                                                <i class="fas fa-arrow-left me-2"></i>Back
                                            </button>
                                            <button type="button" class="btn btn-auth btn-lg flex-fill" onclick="nextStep()">
                                                Continue <i class="fas fa-arrow-right ms-2"></i>
                                            </button>
                                        </div>
                                    </div>
                                    
                                    <!-- Step 3: Password -->
                                    <div class="step-content d-none" id="step3">
                                        <div class="form-floating">
                                            <input asp-for="Password" class="form-control" type="password" placeholder="Password" required />
                                            <label asp-for="Password"><i class="fas fa-lock me-2"></i>Password</label>
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="form-floating">
                                            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password" required />
                                            <label asp-for="ConfirmPassword"><i class="fas fa-lock me-2"></i>Confirm Password</label>
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <small class="text-muted">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Password must be at least 6 characters long
                                            </small>
                                        </div>
                                        
                                        <div class="d-flex gap-2">
                                            <button type="button" class="btn btn-outline-secondary btn-lg" onclick="prevStep()">
                                                <i class="fas fa-arrow-left me-2"></i>Back
                                            </button>
                                            <button type="submit" class="btn btn-auth btn-lg flex-fill">
                                                <i class="fas fa-user-plus me-2"></i>Create Account
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Ensure all buttons are clickable
        document.addEventListener('DOMContentLoaded', function() {
            // Fix button z-index issues
            document.querySelectorAll('.btn').forEach(btn => {
                btn.style.position = 'relative';
                btn.style.zIndex = '10';
            });
        });
        
        let currentStep = 1;
        
        // Role selection
        document.querySelectorAll('.role-option').forEach(option => {
            option.addEventListener('click', function() {
                document.querySelectorAll('.role-option').forEach(opt => opt.classList.remove('active'));
                this.classList.add('active');
                document.getElementById('selectedRole').value = this.dataset.role;
            });
        });
        
        function nextStep() {
            if (currentStep < 3) {
                document.getElementById(`step${currentStep}`).classList.add('d-none');
                currentStep++;
                document.getElementById(`step${currentStep}`).classList.remove('d-none');
                updateProgress();
                
                // Animate step transition
                const newStep = document.getElementById(`step${currentStep}`);
                newStep.style.opacity = '0';
                newStep.style.transform = 'translateX(50px)';
                setTimeout(() => {
                    newStep.style.transition = 'all 0.3s ease';
                    newStep.style.opacity = '1';
                    newStep.style.transform = 'translateX(0)';
                }, 50);
            }
        }
        
        function prevStep() {
            if (currentStep > 1) {
                document.getElementById(`step${currentStep}`).classList.add('d-none');
                currentStep--;
                document.getElementById(`step${currentStep}`).classList.remove('d-none');
                updateProgress();
                
                // Animate step transition
                const newStep = document.getElementById(`step${currentStep}`);
                newStep.style.opacity = '0';
                newStep.style.transform = 'translateX(-50px)';
                setTimeout(() => {
                    newStep.style.transition = 'all 0.3s ease';
                    newStep.style.opacity = '1';
                    newStep.style.transform = 'translateX(0)';
                }, 50);
            }
        }
        
        function updateProgress() {
            document.querySelectorAll('.step').forEach((step, index) => {
                step.classList.remove('active', 'completed');
                if (index + 1 < currentStep) {
                    step.classList.add('completed');
                } else if (index + 1 === currentStep) {
                    step.classList.add('active');
                }
            });
        }
        
        // Form animations
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.style.transform = 'scale(1.02)';
            });
            
            input.addEventListener('blur', function() {
                this.parentElement.style.transform = 'scale(1)';
            });
        });
        
        // Form submission
        document.getElementById('registerForm').addEventListener('submit', function(e) {
            // Ensure we're on the last step before submitting
            if (currentStep !== 3) {
                e.preventDefault();
                return false;
            }
            
            const btn = this.querySelector('button[type="submit"]');
            btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Creating Account...';
            btn.disabled = true;
        });
    </script>
</body>
</html>