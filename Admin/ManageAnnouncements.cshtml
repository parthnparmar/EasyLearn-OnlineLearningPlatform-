@model List<EasyLearn.Models.Announcement>
@{
    ViewData["Title"] = "Manage Announcements";
}

<div class="container-fluid fade-in">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-bullhorn text-primary"></i> Manage Announcements
        </h1>
        <button class="btn btn-modern btn-primary" data-bs-toggle="modal" data-bs-target="#addAnnouncementModal">
            <i class="fas fa-plus"></i> Create Announcement
        </button>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="modern-card gradient-primary stats-card h-100">
                <div class="stats-number">@Model.Count</div>
                <div class="stats-label">
                    <i class="fas fa-bullhorn"></i> Total Announcements
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="modern-card gradient-success stats-card h-100">
                <div class="stats-number">@Model.Count(a => a.IsActive)</div>
                <div class="stats-label">
                    <i class="fas fa-check-circle"></i> Active
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="modern-card gradient-warning stats-card h-100">
                <div class="stats-number">@Model.Count(a => a.IsPinned)</div>
                <div class="stats-label">
                    <i class="fas fa-thumbtack"></i> Pinned
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="modern-card gradient-info stats-card h-100">
                <div class="stats-number">@Model.Count(a => a.CreatedAt >= DateTime.Today.AddDays(-7))</div>
                <div class="stats-label">
                    <i class="fas fa-calendar-week"></i> This Week
                </div>
            </div>
        </div>
    </div>

    <!-- Announcements List -->
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var announcement in Model)
            {
                <div class="col-12 mb-4">
                    <div class="announcement-card modern-card @(announcement.IsPinned ? "border-warning" : "")">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center mb-2">
                                        <h5 class="card-title mb-0">@announcement.Title</h5>
                                        @if (announcement.IsPinned)
                                        {
                                            <span class="badge bg-warning ms-2">
                                                <i class="fas fa-thumbtack"></i> Pinned
                                            </span>
                                        }
                                        <span class="badge bg-@(announcement.IsActive ? "success" : "secondary") ms-2">
                                            @(announcement.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </div>
                                    <p class="card-text text-muted mb-3">@announcement.Content</p>
                                    <div class="d-flex align-items-center text-muted">
                                        <div class="avatar-circle me-2" style="width: 30px; height: 30px; font-size: 0.8rem;">
                                            @announcement.CreatedBy.FirstName.First()@announcement.CreatedBy.LastName.First()
                                        </div>
                                        <small>
                                            By @announcement.CreatedBy.FirstName @announcement.CreatedBy.LastName â€¢ 
                                            @announcement.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")
                                        </small>
                                    </div>
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" href="#" onclick="editAnnouncement(@announcement.Id, '@announcement.Title', '@announcement.Content', @announcement.IsPinned.ToString().ToLower())">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#" onclick="togglePin(@announcement.Id)">
                                                <i class="fas fa-thumbtack"></i> @(announcement.IsPinned ? "Unpin" : "Pin")
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#" onclick="toggleStatus(@announcement.Id)">
                                                <i class="fas fa-@(announcement.IsActive ? "eye-slash" : "eye")"></i> @(announcement.IsActive ? "Deactivate" : "Activate")
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item text-danger" href="#" onclick="deleteAnnouncement(@announcement.Id)">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="modern-card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-bullhorn fa-5x text-muted mb-4"></i>
                        <h3>No Announcements Yet</h3>
                        <p class="text-muted mb-4">Create your first announcement to communicate with users.</p>
                        <button class="btn btn-modern btn-primary" data-bs-toggle="modal" data-bs-target="#addAnnouncementModal">
                            <i class="fas fa-plus"></i> Create First Announcement
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (Model.Any())
    {
        <!-- Announcement Analytics -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="modern-card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-chart-line"></i> Announcement Analytics</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Recent Activity</h6>
                                <div class="list-group list-group-flush">
                                    @foreach (var announcement in Model.OrderByDescending(a => a.CreatedAt).Take(5))
                                    {
                                        <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                                            <div>
                                                <strong>@announcement.Title</strong><br>
                                                <small class="text-muted">@announcement.CreatedAt.ToString("MMM dd, yyyy")</small>
                                            </div>
                                            <div>
                                                @if (announcement.IsPinned)
                                                {
                                                    <span class="badge bg-warning me-1">Pinned</span>
                                                }
                                                <span class="badge bg-@(announcement.IsActive ? "success" : "secondary")">
                                                    @(announcement.IsActive ? "Active" : "Inactive")
                                                </span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h6>Announcement Distribution</h6>
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <span>Active Announcements</span>
                                        <span>@Model.Count(a => a.IsActive)/@Model.Count</span>
                                    </div>
                                    <div class="progress-modern">
                                        <div class="progress-bar-modern" style="width: @(Model.Any() ? (double)Model.Count(a => a.IsActive) / Model.Count * 100 : 0)%"></div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <span>Pinned Announcements</span>
                                        <span>@Model.Count(a => a.IsPinned)/@Model.Count</span>
                                    </div>
                                    <div class="progress-modern">
                                        <div class="progress-bar-modern" style="width: @(Model.Any() ? (double)Model.Count(a => a.IsPinned) / Model.Count * 100 : 0)%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Add Announcement Modal -->
<div class="modal fade modal-modern" id="addAnnouncementModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-plus"></i> Create New Announcement</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" action="/admin/announcements/create">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Title</label>
                        <input type="text" class="form-control" name="title" required placeholder="Enter announcement title...">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Content</label>
                        <textarea class="form-control" name="content" rows="6" required placeholder="Write your announcement content here..."></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="isPinned">
                                <label class="form-check-label">
                                    <i class="fas fa-thumbtack"></i> Pin this announcement
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="sendNotification">
                                <label class="form-check-label">
                                    <i class="fas fa-bell"></i> Send notification to users
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-modern btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-modern btn-primary">
                        <i class="fas fa-bullhorn"></i> Create Announcement
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Announcement Modal -->
<div class="modal fade modal-modern" id="editAnnouncementModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-edit"></i> Edit Announcement</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" action="/admin/announcements/edit">
                <div class="modal-body">
                    <input type="hidden" name="id" id="editAnnouncementId">
                    <div class="mb-3">
                        <label class="form-label">Title</label>
                        <input type="text" class="form-control" name="title" id="editAnnouncementTitle" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Content</label>
                        <textarea class="form-control" name="content" id="editAnnouncementContent" rows="6" required></textarea>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="isPinned" id="editAnnouncementPinned">
                        <label class="form-check-label">
                            <i class="fas fa-thumbtack"></i> Pin this announcement
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-modern btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-modern btn-primary">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function editAnnouncement(id, title, content, isPinned) {
            $('#editAnnouncementId').val(id);
            $('#editAnnouncementTitle').val(title);
            $('#editAnnouncementContent').val(content);
            $('#editAnnouncementPinned').prop('checked', isPinned);
            $('#editAnnouncementModal').modal('show');
        }

        function togglePin(announcementId) {
            fetch(`/admin/announcements/toggle-pin/${announcementId}`, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                }
            }).then(() => {
                showNotification('Announcement pin status updated!', 'success');
                setTimeout(() => location.reload(), 1500);
            });
        }

        function toggleStatus(announcementId) {
            fetch(`/admin/announcements/toggle/${announcementId}`, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                }
            }).then(() => {
                showNotification('Announcement status updated!', 'success');
                setTimeout(() => location.reload(), 1500);
            });
        }

        function deleteAnnouncement(announcementId) {
            if (confirm('Are you sure you want to delete this announcement? This action cannot be undone.')) {
                fetch(`/admin/announcements/delete/${announcementId}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    }
                }).then(() => {
                    showNotification('Announcement deleted successfully!', 'success');
                    setTimeout(() => location.reload(), 1500);
                });
            }
        }

        function showNotification(message, type) {
            const notification = $(`
                <div class="notification ${type}">
                    <i class="fas fa-${type === 'success' ? 'check' : type === 'warning' ? 'exclamation' : 'info'}-circle me-2"></i>
                    ${message}
                </div>
            `);
            
            $('body').append(notification);
            setTimeout(() => notification.addClass('show'), 100);
            setTimeout(() => {
                notification.removeClass('show');
                setTimeout(() => notification.remove(), 300);
            }, 3000);
        }

        // Initialize animations
        $(document).ready(function() {
            // Animate stats
            $('.stats-number').each(function() {
                const $this = $(this);
                const countTo = parseInt($this.text());
                
                $({ countNum: 0 }).animate({
                    countNum: countTo
                }, {
                    duration: 2000,
                    easing: 'swing',
                    step: function() {
                        $this.text(Math.floor(this.countNum));
                    },
                    complete: function() {
                        $this.text(countTo);
                    }
                });
            });

            // Animate progress bars
            setTimeout(() => {
                $('.progress-bar-modern').each(function() {
                    const width = $(this).css('width');
                    $(this).css('width', '0').animate({ width: width }, 1500);
                });
            }, 500);

            // Stagger card animations
            $('.announcement-card').each(function(index) {
                $(this).css('animation-delay', (index * 0.1) + 's');
            });

            // Auto-resize textareas
            $('textarea').on('input', function() {
                this.style.height = 'auto';
                this.style.height = (this.scrollHeight) + 'px';
            });
        });
    </script>
}