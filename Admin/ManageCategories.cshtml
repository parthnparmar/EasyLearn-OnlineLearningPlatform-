@model List<EasyLearn.Models.Category>
@{
    ViewData["Title"] = "Manage Categories";
}

<div class="container-fluid fade-in">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-tags text-primary"></i> Manage Categories
        </h1>
        <button class="btn btn-modern btn-primary" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
            <i class="fas fa-plus"></i> Add New Category
        </button>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="modern-card gradient-primary stats-card h-100">
                <div class="stats-number">@Model.Count</div>
                <div class="stats-label">
                    <i class="fas fa-tags"></i> Total Categories
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="modern-card gradient-success stats-card h-100">
                <div class="stats-number">@Model.Count(c => c.IsActive)</div>
                <div class="stats-label">
                    <i class="fas fa-check-circle"></i> Active Categories
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="modern-card gradient-info stats-card h-100">
                <div class="stats-number">@Model.Sum(c => c.Courses.Count)</div>
                <div class="stats-label">
                    <i class="fas fa-book"></i> Total Courses
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="modern-card gradient-warning stats-card h-100">
                <div class="stats-number">@(Model.Any() ? Model.Average(c => c.Courses.Count).ToString("F0") : "0")</div>
                <div class="stats-label">
                    <i class="fas fa-chart-bar"></i> Avg Courses/Category
                </div>
            </div>
        </div>
    </div>

    <!-- Categories Grid -->
    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="category-card modern-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="flex-grow-1">
                                <h5 class="card-title mb-1">@category.Name</h5>
                                <p class="card-text text-muted">@category.Description</p>
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" href="#" onclick="editCategory(@category.Id, '@category.Name', '@category.Description')">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#" onclick="viewCourses(@category.Id)">
                                            <i class="fas fa-eye"></i> View Courses
                                        </a>
                                    </li>
                                    @if (!category.Courses.Any())
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item text-danger" href="#" onclick="deleteCategory(@category.Id)">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>

                        <div class="row text-center">
                            <div class="col-6">
                                <div class="border-end">
                                    <div class="h4 mb-0 text-primary">@category.Courses.Count</div>
                                    <small class="text-muted">Courses</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="h4 mb-0 text-success">@category.Courses.Sum(c => c.Enrollments.Count)</div>
                                <small class="text-muted">Enrollments</small>
                            </div>
                        </div>

                        <div class="mt-3">
                            <div class="progress-modern">
                                <div class="progress-bar-modern" style="width: @(Model.Any() ? (double)category.Courses.Count / Model.Max(c => c.Courses.Count) * 100 : 0)%"></div>
                            </div>
                            <small class="text-muted">Relative course distribution</small>
                        </div>

                        <div class="mt-3">
                            <span class="badge bg-@(category.IsActive ? "success" : "secondary")">
                                @(category.IsActive ? "Active" : "Inactive")
                            </span>
                            @if (category.Courses.Any())
                            {
                                <span class="badge bg-info ms-1">@category.Courses.Count courses</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="modern-card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-tags fa-5x text-muted mb-4"></i>
                        <h3>No Categories Yet</h3>
                        <p class="text-muted mb-4">Create your first category to organize courses.</p>
                        <button class="btn btn-modern btn-primary" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
                            <i class="fas fa-plus"></i> Add First Category
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (Model.Any())
    {
        <!-- Category Analytics -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="modern-card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-chart-pie"></i> Category Analytics</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Most Popular Categories</h6>
                                <div class="list-group list-group-flush">
                                    @foreach (var category in Model.OrderByDescending(c => c.Courses.Sum(co => co.Enrollments.Count)).Take(5))
                                    {
                                        <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                                            <div>
                                                <strong>@category.Name</strong><br>
                                                <small class="text-muted">@category.Courses.Count courses</small>
                                            </div>
                                            <span class="badge bg-primary rounded-pill">@category.Courses.Sum(c => c.Enrollments.Count) enrollments</span>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h6>Category Distribution</h6>
                                <canvas id="categoryChart" width="400" height="200"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Add Category Modal -->
<div class="modal fade modal-modern" id="addCategoryModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-plus"></i> Add New Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" action="/admin/categories/create">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Category Name</label>
                        <input type="text" class="form-control" name="name" required placeholder="e.g., Web Development">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" name="description" rows="3" placeholder="Brief description of the category..."></textarea>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="isActive" checked>
                            <label class="form-check-label">Active Category</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-modern btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-modern btn-primary">
                        <i class="fas fa-plus"></i> Add Category
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Category Modal -->
<div class="modal fade modal-modern" id="editCategoryModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-edit"></i> Edit Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" action="/admin/categories/edit">
                <div class="modal-body">
                    <input type="hidden" name="id" id="editCategoryId">
                    <div class="mb-3">
                        <label class="form-label">Category Name</label>
                        <input type="text" class="form-control" name="name" id="editCategoryName" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" name="description" id="editCategoryDescription" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-modern btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-modern btn-primary">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- View Courses Modal -->
<div class="modal fade modal-modern" id="viewCoursesModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-book"></i> Category Courses</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="coursesContent">
                <!-- Content will be loaded dynamically -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        function editCategory(id, name, description) {
            $('#editCategoryId').val(id);
            $('#editCategoryName').val(name);
            $('#editCategoryDescription').val(description);
            $('#editCategoryModal').modal('show');
        }

        function deleteCategory(categoryId) {
            if (confirm('Are you sure you want to delete this category? This action cannot be undone.')) {
                fetch(`/admin/categories/delete/${categoryId}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    }
                }).then(() => {
                    showNotification('Category deleted successfully!', 'success');
                    setTimeout(() => location.reload(), 1500);
                });
            }
        }

        function viewCourses(categoryId) {
            $('#coursesContent').html(`
                <div class="text-center py-4">
                    <div class="loading-spinner"></div>
                    <p class="mt-2">Loading courses...</p>
                </div>
            `);
            $('#viewCoursesModal').modal('show');
            
            // Simulate loading courses
            setTimeout(() => {
                $('#coursesContent').html(`
                    <div class="list-group">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>JavaScript Fundamentals</strong><br>
                                <small class="text-muted">By John Doe • 156 students</small>
                            </div>
                            <span class="badge bg-success">Approved</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Advanced React Concepts</strong><br>
                                <small class="text-muted">By Jane Smith • 89 students</small>
                            </div>
                            <span class="badge bg-success">Approved</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Node.js Backend Development</strong><br>
                                <small class="text-muted">By Mike Johnson • 67 students</small>
                            </div>
                            <span class="badge bg-warning">Pending</span>
                        </div>
                    </div>
                `);
            }, 1000);
        }

        function showNotification(message, type) {
            const notification = $(`
                <div class="notification ${type}">
                    <i class="fas fa-${type === 'success' ? 'check' : type === 'warning' ? 'exclamation' : 'info'}-circle me-2"></i>
                    ${message}
                </div>
            `);
            
            $('body').append(notification);
            setTimeout(() => notification.addClass('show'), 100);
            setTimeout(() => {
                notification.removeClass('show');
                setTimeout(() => notification.remove(), 300);
            }, 3000);
        }

        // Initialize chart
        function initCategoryChart() {
            const ctx = document.getElementById('categoryChart');
            if (!ctx) return;

            const categories = @Html.Raw(Json.Serialize(Model.Select(c => c.Name)));
            const courseCounts = @Html.Raw(Json.Serialize(Model.Select(c => c.Courses.Count)));

            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: categories,
                    datasets: [{
                        data: courseCounts,
                        backgroundColor: [
                            '#007bff',
                            '#28a745',
                            '#ffc107',
                            '#17a2b8',
                            '#dc3545',
                            '#6f42c1'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
        }

        // Initialize animations and chart
        $(document).ready(function() {
            // Animate stats
            $('.stats-number').each(function() {
                const $this = $(this);
                const countTo = parseInt($this.text());
                
                $({ countNum: 0 }).animate({
                    countNum: countTo
                }, {
                    duration: 2000,
                    easing: 'swing',
                    step: function() {
                        $this.text(Math.floor(this.countNum));
                    },
                    complete: function() {
                        $this.text(countTo);
                    }
                });
            });

            // Animate progress bars
            setTimeout(() => {
                $('.progress-bar-modern').each(function() {
                    const width = $(this).css('width');
                    $(this).css('width', '0').animate({ width: width }, 1500);
                });
            }, 500);

            // Initialize chart
            if (@Model.Any().ToString().ToLower()) {
                initCategoryChart();
            }

            // Stagger card animations
            $('.category-card').each(function(index) {
                $(this).css('animation-delay', (index * 0.1) + 's');
            });
        });
    </script>
}