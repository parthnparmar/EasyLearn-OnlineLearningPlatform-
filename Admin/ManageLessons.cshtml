@model List<EasyLearn.Models.Lesson>
@{
    ViewData["Title"] = "Manage Lessons";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-play-circle text-primary"></i> Manage Lessons
        </h1>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Filter by Course</label>
                    <select name="courseId" class="form-select">
                        <option value="">All Courses</option>
                        @foreach (var course in ViewBag.Courses as List<EasyLearn.Models.Course>)
                        {
                            var isSelected = ViewBag.SelectedCourseId?.ToString() == course.Id.ToString();
                            <option value="@course.Id" selected="@isSelected">
                                @course.Title (@course.Instructor.FirstName @course.Instructor.LastName)
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Search Lessons</label>
                    <input type="text" name="search" class="form-control" value="@ViewBag.Search" placeholder="Search by title or description...">
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-search"></i> Filter
                    </button>
                    <a href="@Url.Action("ManageLessons")" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Lessons Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-list"></i> Lessons (@Model.Count)
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Lesson</th>
                                <th>Course</th>
                                <th>Instructor</th>
                                <th>Order</th>
                                <th>Duration</th>
                                <th>Video</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var lesson in Model)
                            {
                                <tr>
                                    <td>
                                        <div>
                                            <strong>@lesson.Title</strong>
                                            @if (!string.IsNullOrEmpty(lesson.Description))
                                            {
                                                <br><small class="text-muted">@lesson.Description.Substring(0, Math.Min(50, lesson.Description.Length))@(lesson.Description.Length > 50 ? "..." : "")</small>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@lesson.Course.Title</span>
                                    </td>
                                    <td>@lesson.Course.Instructor.FirstName @lesson.Course.Instructor.LastName</td>
                                    <td>
                                        <span class="badge bg-info">#@lesson.OrderIndex</span>
                                    </td>
                                    <td>@lesson.Duration.ToString(@"mm\:ss")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(lesson.VideoUrl))
                                        {
                                            <a href="@lesson.VideoUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-external-link-alt"></i> View
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No video</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-@(lesson.IsActive ? "success" : "danger")">
                                            @(lesson.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-@(lesson.IsActive ? "warning" : "success")" 
                                                    onclick="toggleLessonStatus(@lesson.Id, '@(lesson.IsActive ? "deactivate" : "activate")')">
                                                <i class="fas fa-@(lesson.IsActive ? "pause" : "play")"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-play-circle fa-3x text-muted mb-3"></i>
                    <h5>No Lessons Found</h5>
                    <p class="text-muted">No lessons match your current filters.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleLessonStatus(lessonId, action) {
            if (confirm(`Are you sure you want to ${action} this lesson?`)) {
                fetch(`/admin/lessons/toggle/${lessonId}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    }
                }).then(() => {
                    location.reload();
                });
            }
        }
    </script>
}