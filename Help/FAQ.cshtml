@{
    ViewData["Title"] = "Frequently Asked Questions - EasyLearn";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex align-items-center">
                        <div>
                            <h4 class="mb-0 text-info">
                                <i class="fas fa-question-circle me-2"></i>Frequently Asked Questions
                            </h4>
                            <p class="text-sm mb-0">Find answers to common questions about EasyLearn</p>
                        </div>
                        <div class="ms-auto">
                            <a href="/help" class="btn btn-outline-info btn-sm">
                                <i class="fas fa-arrow-left me-1"></i>Back to Help
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Search FAQ -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" class="form-control" id="faqSearch" placeholder="Search FAQ...">
                            </div>
                        </div>
                    </div>

                    <!-- FAQ Categories -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-outline-primary active" data-category="all">All</button>
                                <button type="button" class="btn btn-outline-primary" data-category="general">General</button>
                                <button type="button" class="btn btn-outline-primary" data-category="courses">Courses</button>
                                <button type="button" class="btn btn-outline-primary" data-category="exams">Exams</button>
                                <button type="button" class="btn btn-outline-primary" data-category="payments">Payments</button>
                                <button type="button" class="btn btn-outline-primary" data-category="technical">Technical</button>
                            </div>
                        </div>
                    </div>

                    <!-- FAQ Accordion -->
                    <div class="accordion" id="faqAccordion">
                        
                        <!-- General Questions -->
                        <div class="faq-item" data-category="general">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                        <i class="fas fa-question-circle text-primary me-2"></i>
                                        What is EasyLearn and how does it work?
                                    </button>
                                </h2>
                                <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        EasyLearn is a comprehensive online learning platform that offers video-based courses, interactive quizzes, and professional certification. Students can enroll in courses, watch video lessons, take assessments, and earn certificates upon completion. The platform supports multiple user roles including Students, Instructors, and Administrators.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="faq-item" data-category="general">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                        <i class="fas fa-user-plus text-success me-2"></i>
                                        How do I create an account on EasyLearn?
                                    </button>
                                </h2>
                                <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        You can create an account by clicking "Register" on the homepage. Fill in your details (name, email, password) and click "Register". You can also sign up using your Google, Facebook, or GitHub account. All new accounts are automatically assigned the Student role.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="faq-item" data-category="general">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                        <i class="fas fa-user-cog text-warning me-2"></i>
                                        How can I become an Instructor?
                                    </button>
                                </h2>
                                <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        To become an Instructor, you need to contact the platform administrator after creating your account. The admin will review your qualifications and assign the Instructor role if approved. Once you have Instructor access, you can create courses, manage lessons, and conduct exams.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Course Questions -->
                        <div class="faq-item" data-category="courses">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                                        <i class="fas fa-book text-primary me-2"></i>
                                        Are all courses free on EasyLearn?
                                    </button>
                                </h2>
                                <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        Yes! All courses on EasyLearn are currently free to enroll. You can access all video lessons, quizzes, and course materials without any enrollment fee. However, there are fees for certificate generation (₹500 certificate fee + ₹300 exam fee = ₹800 total).
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="faq-item" data-category="courses">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq5">
                                        <i class="fas fa-play-circle text-success me-2"></i>
                                        How do I access course videos?
                                    </button>
                                </h2>
                                <div id="faq5" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        After enrolling in a course, go to "My Courses" and click "View Content" on the course. You'll see all available lessons. Click on any lesson to start watching the video. Your progress is automatically tracked, and you can resume from where you left off.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="faq-item" data-category="courses">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq6">
                                        <i class="fas fa-download text-info me-2"></i>
                                        Can I download course materials?
                                    </button>
                                </h2>
                                <div id="faq6" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        Yes, if the instructor has provided downloadable materials for a lesson, you'll see a download link in the video player. Materials may include PDFs, slides, code files, or other supplementary resources. You must be enrolled in the course to access downloads.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Exam Questions -->
                        <div class="faq-item" data-category="exams">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq7">
                                        <i class="fas fa-clipboard-check text-warning me-2"></i>
                                        How do exams work on EasyLearn?
                                    </button>
                                </h2>
                                <div id="faq7" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        Exams consist of three parts: Part A (50 marks MCQs), Part B (30 marks written questions), and Internal Assessment (20 marks by instructor). You need 75% to pass. Before taking an exam, you must complete a verification process with your details and solve a CAPTCHA. Exams are only available during assigned time slots.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="faq-item" data-category="exams">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq8">
                                        <i class="fas fa-clock text-danger me-2"></i>
                                        What happens if I miss my exam time?
                                    </button>
                                </h2>
                                <div id="faq8" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        Exams have strict time limits and are only available during assigned slots. If you miss your exam time, you'll need to pay a re-exam fee (₹200) to get another attempt. Contact your instructor to request a new exam schedule. Make sure to check your exam schedule in "My Exams" regularly.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="faq-item" data-category="exams">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq9">
                                        <i class="fas fa-shield-alt text-primary me-2"></i>
                                        What is the pre-exam verification process?
                                    </button>
                                </h2>
                                <div id="faq9" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        Before taking any exam, you must verify your identity by providing accurate personal details (name, email, phone, address, emergency contact), solving a simple math CAPTCHA, and agreeing to the terms and conditions. This ensures exam integrity and helps with certificate generation.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Payment Questions -->
                        <div class="faq-item" data-category="payments">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq10">
                                        <i class="fas fa-certificate text-success me-2"></i>
                                        How much does a certificate cost?
                                    </button>
                                </h2>
                                <div id="faq10" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        Certificate generation costs ₹800 total, which includes ₹500 for the certificate and ₹300 for exam access. This payment is required after completing the course and before downloading your certificate. The certificate is valid for 1 year and includes QR code verification.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="faq-item" data-category="payments">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq11">
                                        <i class="fas fa-credit-card text-info me-2"></i>
                                        What payment methods are accepted?
                                    </button>
                                </h2>
                                <div id="faq11" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        We accept multiple payment methods including UPI payments, Credit/Debit cards, QR code payments, and digital wallets (Google Pay, PhonePe, Paytm). All payments are secure and generate automatic PDF receipts for your records.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="faq-item" data-category="payments">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq12">
                                        <i class="fas fa-redo text-warning me-2"></i>
                                        What is the re-exam fee?
                                    </button>
                                </h2>
                                <div id="faq12" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        If you fail an exam or miss your scheduled exam time, you can retake it by paying a re-exam fee of ₹200. This allows you to attempt the exam again during the same exam session with fresh questions. Payment must be completed before the exam session ends.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Technical Questions -->
                        <div class="faq-item" data-category="technical">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq13">
                                        <i class="fas fa-laptop text-primary me-2"></i>
                                        What are the system requirements?
                                    </button>
                                </h2>
                                <div id="faq13" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        EasyLearn works on any device with a modern web browser and stable internet connection. For best experience, use Chrome, Firefox, Safari, or Edge. For exams, ensure you have a reliable internet connection and a quiet environment. Mobile devices are supported but desktop/laptop is recommended for exams.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="faq-item" data-category="technical">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq14">
                                        <i class="fas fa-video text-danger me-2"></i>
                                        Videos are not playing. What should I do?
                                    </button>
                                </h2>
                                <div id="faq14" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        If videos aren't playing, try these steps: 1) Check your internet connection, 2) Refresh the page, 3) Clear browser cache and cookies, 4) Try a different browser, 5) Disable browser extensions temporarily. If the problem persists, contact support with details about your browser and device.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="faq-item" data-category="technical">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq15">
                                        <i class="fas fa-mobile-alt text-success me-2"></i>
                                        Can I use EasyLearn on my mobile device?
                                    </button>
                                </h2>
                                <div id="faq15" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        Yes! EasyLearn is fully responsive and works on mobile devices and tablets. You can watch videos, take quizzes, and access most features on mobile. However, for exams and complex tasks, we recommend using a desktop or laptop for the best experience.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Additional Questions -->
                        <div class="faq-item" data-category="general">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq16">
                                        <i class="fas fa-qrcode text-info me-2"></i>
                                        How do I verify a certificate?
                                    </button>
                                </h2>
                                <div id="faq16" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        Each certificate has a unique QR code for verification. Go to the "Verify Certificate" page on our website, scan the QR code or enter the certificate number manually. The system will display the certificate details, validity status, and authenticity confirmation.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="faq-item" data-category="courses">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq17">
                                        <i class="fas fa-star text-warning me-2"></i>
                                        How do I rate and review a course?
                                    </button>
                                </h2>
                                <div id="faq17" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        You can rate and review a course only after completing it (100% progress). Go to the course details page and you'll see a review section. Rate the course from 1-5 stars and write your feedback. Your review helps other students choose courses and helps instructors improve content.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="faq-item" data-category="technical">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq18">
                                        <i class="fas fa-lock text-danger me-2"></i>
                                        I forgot my password. How do I reset it?
                                    </button>
                                </h2>
                                <div id="faq18" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        Click "Forgot Password" on the login page, enter your email address, and click "Send Reset Link". Check your email for a password reset link (also check spam folder). Click the link and follow instructions to create a new password. If you don't receive the email, contact support.
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <!-- Still Need Help -->
                    <div class="row mt-5">
                        <div class="col-12">
                            <div class="card bg-gradient-info text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-headset fa-3x mb-3"></i>
                                    <h5>Still Need Help?</h5>
                                    <p class="mb-3">Can't find the answer you're looking for? Our support team is ready to assist you!</p>
                                    <a href="/help/contact" class="btn btn-light">
                                        <i class="fas fa-envelope me-1"></i>Contact Support
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // FAQ Search functionality
            $('#faqSearch').on('keyup', function() {
                var searchTerm = $(this).val().toLowerCase();
                $('.faq-item').each(function() {
                    var faqText = $(this).text().toLowerCase();
                    if (faqText.includes(searchTerm)) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });

            // Category filtering
            $('[data-category]').on('click', function() {
                var category = $(this).data('category');
                
                // Update active button
                $('[data-category]').removeClass('active');
                $(this).addClass('active');
                
                // Show/hide FAQ items
                if (category === 'all') {
                    $('.faq-item').show();
                } else {
                    $('.faq-item').hide();
                    $('.faq-item[data-category="' + category + '"]').show();
                }
                
                // Clear search
                $('#faqSearch').val('');
            });

            // Smooth scroll to opened accordion
            $('.accordion-button').on('click', function() {
                setTimeout(() => {
                    if (!$(this).hasClass('collapsed')) {
                        $('html, body').animate({
                            scrollTop: $(this).offset().top - 100
                        }, 500);
                    }
                }, 350);
            });
        });
    </script>
}

<style>
    .card.bg-gradient-info {
        background: linear-gradient(45deg, #17a2b8, #138496) !important;
    }
    
    .accordion-button {
        font-weight: 500;
    }
    
    .accordion-button:not(.collapsed) {
        background-color: #f8f9fa;
        border-color: #dee2e6;
    }
    
    .faq-item {
        margin-bottom: 10px;
    }
    
    .btn-group .btn {
        margin-right: 5px;
    }
    
    .btn-group .btn.active {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
    }
    
    .input-group {
        max-width: 400px;
        margin: 0 auto;
    }
</style>