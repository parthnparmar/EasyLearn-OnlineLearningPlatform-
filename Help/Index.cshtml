@{
    ViewData["Title"] = "Help Center - EasyLearn";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex align-items-center">
                        <div>
                            <h4 class="mb-0 text-primary">
                                <i class="fas fa-question-circle me-2"></i>EasyLearn Help Center
                            </h4>
                            <p class="text-sm mb-0">Complete guide to using the EasyLearn platform</p>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Quick Navigation -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="alert alert-info">
                                <i class="fas fa-lightbulb me-2"></i>
                                <strong>Welcome to EasyLearn!</strong> Choose your role below to get started with role-specific guidance.
                            </div>
                        </div>
                    </div>

                    <!-- Role-based Help Cards -->
                    <div class="row">
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100 border-primary">
                                <div class="card-header bg-gradient-primary text-white text-center">
                                    <i class="fas fa-user-graduate fa-2x mb-2"></i>
                                    <h5 class="mb-0">Student Guide</h5>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled">
                                        <li><i class="fas fa-check text-success me-2"></i>Account Registration & Login</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Course Enrollment</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Video Learning</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Taking Quizzes & Exams</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Certificate Generation</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Payment Process</li>
                                    </ul>
                                </div>
                                <div class="card-footer text-center">
                                    <a href="/help/student" class="btn btn-primary">
                                        <i class="fas fa-arrow-right me-1"></i>Student Help
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100 border-success">
                                <div class="card-header bg-gradient-success text-white text-center">
                                    <i class="fas fa-chalkboard-teacher fa-2x mb-2"></i>
                                    <h5 class="mb-0">Instructor Guide</h5>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled">
                                        <li><i class="fas fa-check text-success me-2"></i>Course Creation</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Lesson Management</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Quiz & Exam Setup</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Student Performance</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Exam Scheduling</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Grading System</li>
                                    </ul>
                                </div>
                                <div class="card-footer text-center">
                                    <a href="/help/instructor" class="btn btn-success">
                                        <i class="fas fa-arrow-right me-1"></i>Instructor Help
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100 border-warning">
                                <div class="card-header bg-gradient-warning text-white text-center">
                                    <i class="fas fa-user-shield fa-2x mb-2"></i>
                                    <h5 class="mb-0">Admin Guide</h5>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled">
                                        <li><i class="fas fa-check text-success me-2"></i>User Management</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Course Approval</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Category Management</li>
                                        <li><i class="fas fa-check text-success me-2"></i>System Analytics</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Announcements</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Data Export</li>
                                    </ul>
                                </div>
                                <div class="card-footer text-center">
                                    <a href="/help/admin" class="btn btn-warning">
                                        <i class="fas fa-arrow-right me-1"></i>Admin Help
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- General Help Sections -->
                    <div class="row">
                        <div class="col-lg-6 col-md-12 mb-4">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-rocket fa-3x text-info mb-3"></i>
                                    <h5>Getting Started</h5>
                                    <p class="text-muted">New to EasyLearn? Start here for a quick overview of the platform.</p>
                                    <a href="/help/getting-started" class="btn btn-info">
                                        <i class="fas fa-play me-1"></i>Get Started
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-12 mb-4">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-question fa-3x text-secondary mb-3"></i>
                                    <h5>Frequently Asked Questions</h5>
                                    <p class="text-muted">Find answers to common questions about using EasyLearn.</p>
                                    <a href="/help/faq" class="btn btn-secondary">
                                        <i class="fas fa-search me-1"></i>View FAQ
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Contact Support -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card bg-gradient-dark text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-headset fa-3x mb-3"></i>
                                    <h5>Need More Help?</h5>
                                    <p class="mb-3">Can't find what you're looking for? Our support team is here to help!</p>
                                    <a href="/help/contact" class="btn btn-light">
                                        <i class="fas fa-envelope me-1"></i>Contact Support
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card-header.bg-gradient-primary {
        background: linear-gradient(45deg, #007bff, #0056b3) !important;
    }
    .card-header.bg-gradient-success {
        background: linear-gradient(45deg, #28a745, #1e7e34) !important;
    }
    .card-header.bg-gradient-warning {
        background: linear-gradient(45deg, #ffc107, #e0a800) !important;
    }
    .card.bg-gradient-dark {
        background: linear-gradient(45deg, #343a40, #212529) !important;
    }
    .card:hover {
        transform: translateY(-2px);
        transition: transform 0.2s ease-in-out;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
</style>