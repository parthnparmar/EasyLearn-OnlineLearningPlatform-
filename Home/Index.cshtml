@{
    ViewData["Title"] = "Home";
}

<div class="hero-section text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Learn Anything, Anytime with EasyLearn</h1>
                <p class="lead mb-4">Join thousands of students and instructors in our comprehensive online learning platform. Create, share, and learn from the best courses available.</p>
                <div class="d-flex gap-3">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        @if (User.IsInRole("Student"))
                        {
                            <a href="@Url.Action("BrowseCourses", "Student")" class="btn btn-light btn-lg">Browse Courses</a>
                            <a href="@Url.Action("Index", "Student")" class="btn btn-outline-light btn-lg">My Dashboard</a>
                        }
                        else if (User.IsInRole("Instructor"))
                        {
                            <a href="@Url.Action("CreateCourse", "Instructor")" class="btn btn-light btn-lg">Create Course</a>
                            <a href="@Url.Action("Index", "Instructor")" class="btn btn-outline-light btn-lg">My Dashboard</a>
                        }
                        else if (User.IsInRole("Admin"))
                        {
                            <a href="@Url.Action("Index", "Admin")" class="btn btn-light btn-lg">Admin Dashboard</a>
                        }
                    }
                    else
                    {
                        <a href="@Url.Action("Register", "Account")" class="btn btn-light btn-lg">Get Started</a>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-outline-light btn-lg">Sign In</a>
                    }
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-graduation-cap fa-10x opacity-75"></i>
            </div>
        </div>
    </div>
</div>

<div class="container py-5">
    <!-- Features Section -->
    <div class="row text-center mb-5">
        <div class="col-12">
            <h2 class="mb-5">Why Choose EasyLearn?</h2>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <i class="fas fa-video text-primary fa-3x mb-3"></i>
                    <h5>Video Learning</h5>
                    <p class="text-muted">Watch high-quality video lectures from expert instructors at your own pace.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <i class="fas fa-certificate text-success fa-3x mb-3"></i>
                    <h5>Certificates</h5>
                    <p class="text-muted">Earn certificates upon course completion to showcase your achievements.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <i class="fas fa-chart-line text-info fa-3x mb-3"></i>
                    <h5>Progress Tracking</h5>
                    <p class="text-muted">Monitor your learning progress with detailed analytics and insights.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Section -->
    <div class="row text-center py-5 bg-light rounded">
        <div class="col-md-3 mb-3">
            <h3 class="text-primary">1000+</h3>
            <p class="text-muted">Courses Available</p>
        </div>
        <div class="col-md-3 mb-3">
            <h3 class="text-success">5000+</h3>
            <p class="text-muted">Active Students</p>
        </div>
        <div class="col-md-3 mb-3">
            <h3 class="text-info">200+</h3>
            <p class="text-muted">Expert Instructors</p>
        </div>
        <div class="col-md-3 mb-3">
            <h3 class="text-warning">50+</h3>
            <p class="text-muted">Course Categories</p>
        </div>
    </div>

    <!-- How it Works Section -->
    <div class="row py-5">
        <div class="col-12 text-center mb-5">
            <h2>How It Works</h2>
        </div>
        <div class="col-md-4 text-center mb-4">
            <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                <span class="h3 mb-0">1</span>
            </div>
            <h5>Sign Up</h5>
            <p class="text-muted">Create your account and choose your role - Student or Instructor.</p>
        </div>
        <div class="col-md-4 text-center mb-4">
            <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                <span class="h3 mb-0">2</span>
            </div>
            <h5>Explore & Enroll</h5>
            <p class="text-muted">Browse our course catalog and enroll in courses that interest you.</p>
        </div>
        <div class="col-md-4 text-center mb-4">
            <div class="bg-info text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                <span class="h3 mb-0">3</span>
            </div>
            <h5>Learn & Achieve</h5>
            <p class="text-muted">Complete courses, take quizzes, and earn certificates.</p>
        </div>
    </div>

    @if (User.Identity?.IsAuthenticated != true)
    {
        <!-- CTA Section -->
        <div class="row">
            <div class="col-12">
                <div class="card bg-primary text-white text-center">
                    <div class="card-body py-5">
                        <h3>Ready to Start Learning?</h3>
                        <p class="lead">Join our community of learners and instructors today!</p>
                        <div class="d-flex justify-content-center gap-3">
                            <a href="@Url.Action("Register", "Account")" class="btn btn-light btn-lg">Sign Up as Student</a>
                            <a href="@Url.Action("Register", "Account")" class="btn btn-outline-light btn-lg">Become an Instructor</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>