@{
    ViewData["Title"] = "Exam Dashboard";
    var exams = ViewBag.Exams as List<EasyLearn.Models.Exam> ?? new List<EasyLearn.Models.Exam>();
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-lg-flex">
                        <div>
                            <h5 class="mb-0">Exam Management Dashboard</h5>
                            <p class="text-sm mb-0">Manage exams, questions, and student assessments</p>
                        </div>
                        <div class="ms-auto my-auto mt-lg-0 mt-4">
                            <div class="ms-auto my-auto">
                                <a href="/instructor/create-exam" class="btn bg-gradient-primary btn-sm mb-0">
                                    <i class="fas fa-plus"></i> Create New Exam
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body px-0 pb-0">
                    <div class="table-responsive">
                        <table class="table table-flush" id="exams-table">
                            <thead class="thead-light">
                                <tr>
                                    <th>Course</th>
                                    <th>Exam Title</th>
                                    <th>Date & Session</th>
                                    <th>Status</th>
                                    <th>Attempts</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (exams.Any())
                                {
                                    @foreach (var exam in exams)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="ms-3">
                                                        <h6 class="mb-0 text-sm">@exam.Course.Title</h6>
                                                        <p class="text-xs text-secondary mb-0">@exam.Course.Category.Name</p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <h6 class="mb-0 text-sm">@exam.Title</h6>
                                                <p class="text-xs text-secondary mb-0">@exam.Description</p>
                                            </td>
                                            <td>
                                                <span class="text-sm font-weight-bold">@exam.ScheduledStartTime.ToString("MMM dd, yyyy")</span><br>
                                                <span class="text-xs text-secondary">@exam.ScheduledStartTime.ToString("hh:mm tt")</span>
                                            </td>
                                            <td>
                                                @if (exam.IsApproved)
                                                {
                                                    <span class="badge badge-sm bg-gradient-success">Approved</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-sm bg-gradient-warning">Pending Approval</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="text-sm font-weight-bold">@exam.ExamAttempts.Count</span><br>
                                                <span class="text-xs text-secondary">Total Attempts</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="/instructor/manage-exam-questions/@exam.Id" class="btn btn-link text-dark px-3 mb-0">
                                                        <i class="fas fa-question-circle text-dark me-2"></i>Questions
                                                    </a>
                                                    <a href="/instructor/exam-results/@exam.Id" class="btn btn-link text-dark px-3 mb-0">
                                                        <i class="fas fa-chart-bar text-dark me-2"></i>Results
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-4">
                                            <div class="text-center">
                                                <i class="fas fa-clipboard-list fa-3x text-secondary mb-3"></i>
                                                <h5 class="text-secondary">No Exams Created</h5>
                                                <p class="text-sm text-secondary">Create your first exam to get started</p>
                                                <a href="/instructor/create-exam" class="btn bg-gradient-primary">
                                                    <i class="fas fa-plus me-2"></i>Create Exam
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mt-4">
        <div class="col-lg-3 col-md-6 col-12">
            <div class="card">
                <div class="card-header mx-4 p-3 text-center">
                    <div class="icon icon-shape icon-lg bg-gradient-primary shadow text-center border-radius-lg">
                        <i class="fas fa-clipboard-list opacity-10"></i>
                    </div>
                </div>
                <div class="card-body pt-0 p-3 text-center">
                    <h6 class="text-center mb-0">Total Exams</h6>
                    <span class="text-xs">@exams.Count</span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-12">
            <div class="card">
                <div class="card-header mx-4 p-3 text-center">
                    <div class="icon icon-shape icon-lg bg-gradient-success shadow text-center border-radius-lg">
                        <i class="fas fa-check-circle opacity-10"></i>
                    </div>
                </div>
                <div class="card-body pt-0 p-3 text-center">
                    <h6 class="text-center mb-0">Approved</h6>
                    <span class="text-xs">@exams.Count(e => e.IsApproved)</span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-12">
            <div class="card">
                <div class="card-header mx-4 p-3 text-center">
                    <div class="icon icon-shape icon-lg bg-gradient-info shadow text-center border-radius-lg">
                        <i class="fas fa-users opacity-10"></i>
                    </div>
                </div>
                <div class="card-body pt-0 p-3 text-center">
                    <h6 class="text-center mb-0">Total Attempts</h6>
                    <span class="text-xs">@exams.Sum(e => e.ExamAttempts.Count)</span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-12">
            <div class="card">
                <div class="card-header mx-4 p-3 text-center">
                    <div class="icon icon-shape icon-lg bg-gradient-warning shadow text-center border-radius-lg">
                        <i class="fas fa-clock opacity-10"></i>
                    </div>
                </div>
                <div class="card-body pt-0 p-3 text-center">
                    <h6 class="text-center mb-0">Pending Approval</h6>
                    <span class="text-xs">@exams.Count(e => !e.IsApproved)</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#exams-table').DataTable({
                "pageLength": 10,
                "ordering": true,
                "info": false,
                "lengthChange": false
            });
        });
    </script>
}