@model EasyLearn.Models.Exam

@{
    ViewData["Title"] = "Manage Exam Questions";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-lg-flex">
                        <div>
                            <h5 class="mb-0">@Model.Title - Questions</h5>
                            <p class="text-sm mb-0">@Model.Course.Title</p>
                        </div>
                        <div class="ms-auto my-auto mt-lg-0 mt-4">
                            <button class="btn bg-gradient-primary btn-sm mb-0" data-bs-toggle="modal" data-bs-target="#addQuestionModal">
                                <i class="fas fa-plus"></i> Add Question
                            </button>
                            <a href="/instructor/exam-dashboard" class="btn btn-outline-primary btn-sm mb-0 ms-2">
                                <i class="fas fa-arrow-left me-2"></i>Back
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body px-0 pb-0">
                    <div class="table-responsive">
                        <table class="table table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th>Question</th>
                                    <th>Type</th>
                                    <th>Part</th>
                                    <th>Points</th>
                                    <th>Options</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.ExamQuestions.Any())
                                {
                                    @foreach (var question in Model.ExamQuestions.OrderBy(q => q.OrderIndex))
                                    {
                                        <tr>
                                            <td>
                                                <h6 class="mb-0 text-sm">@question.Text</h6>
                                            </td>
                                            <td>
                                                <span class="badge badge-sm bg-gradient-info">@question.Type</span>
                                            </td>
                                            <td>
                                                <span class="badge badge-sm bg-gradient-secondary">@question.Part</span>
                                            </td>
                                            <td>
                                                <span class="text-sm font-weight-bold">@question.Points</span>
                                            </td>
                                            <td>
                                                @if (question.Options.Any())
                                                {
                                                    <small class="text-secondary">@question.Options.Count options</small>
                                                }
                                                else
                                                {
                                                    <small class="text-secondary">No options</small>
                                                }
                                            </td>
                                            <td>
                                                <button class="btn btn-link text-danger px-3 mb-0" onclick="deleteQuestion(@question.Id)">
                                                    <i class="fas fa-trash text-danger me-2"></i>Delete
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-4">
                                            <div class="text-center">
                                                <i class="fas fa-question-circle fa-3x text-secondary mb-3"></i>
                                                <h5 class="text-secondary">No Questions Added</h5>
                                                <p class="text-sm text-secondary">Add questions to this exam</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Question Modal -->
<div class="modal fade" id="addQuestionModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Question</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="questionForm">
                <div class="modal-body">
                    <input type="hidden" name="ExamId" value="@Model.Id" />
                    
                    <div class="mb-3">
                        <label class="form-label">Question Text</label>
                        <textarea class="form-control" name="Text" rows="3" required></textarea>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4">
                            <label class="form-label">Type</label>
                            <select class="form-select" name="Type" id="questionType" required>
                                <option value="1">Multiple Choice</option>
                                <option value="2">Written</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Part</label>
                            <select class="form-select" name="Part" required>
                                <option value="1">Part A (MCQ)</option>
                                <option value="2">Part B (Written)</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Points</label>
                            <input type="number" class="form-control" name="Points" value="1" min="1" required />
                        </div>
                    </div>
                    
                    <div id="optionsSection" class="mt-3">
                        <label class="form-label">Options</label>
                        <div id="optionsList">
                            <div class="input-group mb-2">
                                <input type="text" class="form-control" name="Options" placeholder="Option 1" />
                                <div class="input-group-text">
                                    <input type="checkbox" name="CorrectOptions" value="0" />
                                </div>
                            </div>
                            <div class="input-group mb-2">
                                <input type="text" class="form-control" name="Options" placeholder="Option 2" />
                                <div class="input-group-text">
                                    <input type="checkbox" name="CorrectOptions" value="1" />
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-sm btn-outline-primary" onclick="addOption()">Add Option</button>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Question</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let optionCount = 2;
        
        $('#questionType').change(function() {
            if ($(this).val() == '1') {
                $('#optionsSection').show();
            } else {
                $('#optionsSection').hide();
            }
        });
        
        function addOption() {
            const optionHtml = `
                <div class="input-group mb-2">
                    <input type="text" class="form-control" name="Options" placeholder="Option ${optionCount + 1}" />
                    <div class="input-group-text">
                        <input type="checkbox" name="CorrectOptions" value="${optionCount}" />
                    </div>
                </div>`;
            $('#optionsList').append(optionHtml);
            optionCount++;
        }
        
        $('#questionForm').submit(function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            
            $.ajax({
                url: '/instructor/create-exam-question',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function() {
                    alert('An error occurred while adding the question.');
                }
            });
        });
        
        function deleteQuestion(questionId) {
            if (confirm('Are you sure you want to delete this question?')) {
                $.ajax({
                    url: '/instructor/delete-exam-question/' + questionId,
                    type: 'DELETE',
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Error: ' + response.message);
                        }
                    },
                    error: function() {
                        alert('An error occurred while deleting the question.');
                    }
                });
            }
        }
    </script>
}