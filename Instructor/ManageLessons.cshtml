@model EasyLearn.Models.Course
@{
    ViewData["Title"] = "Manage Lessons - " + Model.Title;
    Layout = "_Layout";
}

<link href="~/css/lesson-management.css" rel="stylesheet" />

<div class="lesson-management">
    <div class="container-fluid">
        <!-- Header -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/instructor">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="/instructor/my-courses">My Courses</a></li>
                            <li class="breadcrumb-item active">@Model.Title</li>
                        </ol>
                    </nav>
                    <h1 class="page-title">
                        <i class="fas fa-play-circle"></i>
                        Manage Lessons
                    </h1>
                    <p class="page-subtitle">Course: @Model.Title</p>
                </div>
                <div class="col-md-4 text-end">
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addLessonModal">
                        <i class="fas fa-plus"></i>
                        Add New Lesson
                    </button>
                </div>
            </div>
        </div>

        <!-- Course Info Card -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="course-info-card">
                    <div class="course-thumbnail">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.Title">
                        }
                        else
                        {
                            <div class="placeholder-image">
                                <i class="fas fa-book"></i>
                            </div>
                        }
                    </div>
                    <div class="course-details">
                        <h3>@Model.Title</h3>
                        <p class="course-description">@Model.Description</p>
                        <div class="course-stats">
                            <span class="stat-item">
                                <i class="fas fa-play"></i>
                                @(Model.Lessons?.Count ?? 0) Lessons
                            </span>
                            <span class="stat-item">
                                <i class="fas fa-users"></i>
                                @(Model.Enrollments?.Count ?? 0) Students
                            </span>
                            <span class="stat-item">
                                <i class="fas fa-tag"></i>
                                @(Model.Category?.Name ?? "Uncategorized")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Lessons List -->
        <div class="row">
            <div class="col-12">
                <div class="lessons-card">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="fas fa-list"></i>
                            Course Lessons
                        </h5>
                        <div class="card-actions">
                            <button class="btn btn-sm btn-outline-secondary" onclick="reorderLessons()">
                                <i class="fas fa-sort"></i>
                                Reorder
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (Model.Lessons?.Any() == true)
                        {
                            <div class="lessons-list" id="lessonsList">
                                @foreach (var lesson in Model.Lessons.OrderBy(l => l.OrderIndex))
                                {
                                    <div class="lesson-item" data-lesson-id="@lesson.Id">
                                        <div class="lesson-drag-handle">
                                            <i class="fas fa-grip-vertical"></i>
                                        </div>
                                        <div class="lesson-content">
                                            <div class="lesson-header">
                                                <div class="lesson-info">
                                                    <h6 class="lesson-title">
                                                        <span class="lesson-number">@lesson.OrderIndex.</span>
                                                        @lesson.Title
                                                    </h6>
                                                    <p class="lesson-description">@lesson.Description</p>
                                                </div>
                                                <div class="lesson-actions">
                                                    <button class="btn btn-sm btn-outline-primary" onclick="editLesson(@lesson.Id)">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger" onclick="deleteLesson(@lesson.Id)">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </div>
                                            <div class="lesson-details">
                                                <div class="lesson-meta">
                                                    @if (!string.IsNullOrEmpty(lesson.VideoUrl))
                                                    {
                                                        <span class="meta-item">
                                                            <i class="fas fa-video text-danger"></i>
                                                            Video Available
                                                        </span>
                                                    }
                                                    @if (!string.IsNullOrEmpty(lesson.MaterialUrl))
                                                    {
                                                        <span class="meta-item">
                                                            <i class="fas fa-file-pdf text-primary"></i>
                                                            Materials Available
                                                        </span>
                                                    }
                                                    <span class="meta-item">
                                                        <i class="fas fa-clock"></i>
                                                        @lesson.Duration.ToString(@"hh\:mm")
                                                    </span>
                                                </div>
                                                @if (!string.IsNullOrEmpty(lesson.VideoUrl))
                                                {
                                                    <div class="lesson-preview">
                                                        <div class="video-thumbnail">
                                                            <img src="https://img.youtube.com/vi/@(GetYouTubeVideoId(lesson.VideoUrl))/mqdefault.jpg" alt="Video thumbnail">
                                                            <div class="play-overlay">
                                                                <i class="fas fa-play"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">
                                <div class="empty-icon">
                                    <i class="fas fa-play-circle"></i>
                                </div>
                                <h6>No lessons yet</h6>
                                <p>Start adding lessons to build your course content</p>
                                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addLessonModal">
                                    <i class="fas fa-plus"></i>
                                    Add First Lesson
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Lesson Modal -->
<div class="modal fade" id="addLessonModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-plus"></i>
                    Add New Lesson
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="addLessonForm">
                <div class="modal-body">
                    <input type="hidden" name="CourseId" value="@Model.Id" />
                    
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label class="form-label">Lesson Title *</label>
                                <input type="text" class="form-control" name="Title" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">Order Index</label>
                                <input type="number" class="form-control" name="OrderIndex" value="@((Model.Lessons?.Count ?? 0) + 1)" min="1">
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" name="Description" rows="3"></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">YouTube Video URL</label>
                        <input type="url" class="form-control" name="VideoUrl" placeholder="https://www.youtube.com/watch?v=...">
                        <div class="form-text">Paste the YouTube video URL for this lesson</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Lesson Script/Transcript</label>
                        <textarea class="form-control" name="Script" rows="6" placeholder="Enter the lesson script or transcript here..."></textarea>
                        <div class="form-text">Add a script or transcript to help students follow along with the video</div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Duration (minutes)</label>
                                <input type="number" class="form-control" name="Duration" min="1" value="10">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Study Materials</label>
                                <input type="file" class="form-control" id="materialFile" accept=".pdf,.doc,.docx">
                                <div class="form-text">Upload PDF or DOC files (optional)</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        Add Lesson
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Lesson Modal -->
<div class="modal fade" id="editLessonModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-edit"></i>
                    Edit Lesson
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editLessonForm">
                <div class="modal-body">
                    <input type="hidden" name="Id" id="editLessonId" />
                    <input type="hidden" name="CourseId" value="@Model.Id" />
                    
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label class="form-label">Lesson Title *</label>
                                <input type="text" class="form-control" name="Title" id="editLessonTitle" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">Order Index</label>
                                <input type="number" class="form-control" name="OrderIndex" id="editLessonOrder" min="1">
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" name="Description" id="editLessonDescription" rows="3"></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">YouTube Video URL</label>
                        <input type="url" class="form-control" name="VideoUrl" id="editLessonVideoUrl" placeholder="https://www.youtube.com/watch?v=...">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Lesson Script/Transcript</label>
                        <textarea class="form-control" name="Script" id="editLessonScript" rows="6" placeholder="Enter the lesson script or transcript here..."></textarea>
                        <div class="form-text">Add a script or transcript to help students follow along with the video</div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Duration (minutes)</label>
                                <input type="number" class="form-control" name="Duration" id="editLessonDuration" min="1">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Update Materials</label>
                                <input type="file" class="form-control" id="editMaterialFile" accept=".pdf,.doc,.docx">
                                <div class="form-text">Upload new materials (optional)</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        Update Lesson
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/lesson-management-simple.js"></script>
}

@functions {
    public string GetYouTubeVideoId(string url)
    {
        if (string.IsNullOrEmpty(url)) return "";
        
        var regex = new System.Text.RegularExpressions.Regex(@"(?:youtube\.com\/(?:[^\/]+\/.+\/|(?:v|e(?:mbed)?)\/|.*[?&]v=)|youtu\.be\/)([^""&?\/\s]{11})");
        var match = regex.Match(url);
        return match.Success ? match.Groups[1].Value : "";
    }
}