@model EasyLearn.Models.UserProfile
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-user-edit"></i> Edit Profile</h4>
                </div>
                <div class="card-body">
                    <!-- Profile Completion -->
                    <div class="alert alert-info">
                        <div class="d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-chart-pie"></i> Profile Completion</span>
                            <span class="badge bg-primary">@Model.CompletionPercentage%</span>
                        </div>
                        <div class="progress mt-2">
                            <div class="progress-bar" role="progressbar" style="width: @Model.CompletionPercentage%" 
                                 aria-valuenow="@Model.CompletionPercentage" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>

                    <form asp-action="Edit" method="post">
                        <div class="row">
                            <!-- Avatar Display -->
                            <div class="col-md-4 text-center mb-4">
                                <img src="@Model.AvatarUrl" alt="Avatar" class="rounded-circle mb-3" 
                                     style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #007bff;">
                                <p class="text-muted">Your Avatar</p>
                            </div>

                            <!-- Profile Form -->
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label asp-for="Bio" class="form-label">Bio</label>
                                    <textarea asp-for="Bio" class="form-control" rows="3" 
                                              placeholder="Tell us about yourself..."></textarea>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                    <input asp-for="PhoneNumber" class="form-control" 
                                           placeholder="Enter your phone number">
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Address" class="form-label">Address</label>
                                    <input asp-for="Address" class="form-control" 
                                           placeholder="Enter your address">
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="City" class="form-label">City</label>
                                        <input asp-for="City" class="form-control" 
                                               placeholder="Enter your city">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Country" class="form-label">Country</label>
                                        <input asp-for="Country" class="form-control" 
                                               placeholder="Enter your country">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="javascript:history.back()" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Profile
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.progress {
    height: 8px;
}
.card {
    border: none;
    border-radius: 10px;
}
.card-header {
    border-radius: 10px 10px 0 0 !important;
}
</style>