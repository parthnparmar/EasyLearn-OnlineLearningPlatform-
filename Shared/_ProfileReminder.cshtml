@model EasyLearn.Models.UserProfile

@if (Model != null && Model.CompletionPercentage < 100)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <div class="d-flex align-items-center">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <div class="flex-grow-1">
                <strong>Complete your profile</strong>
                <p class="mb-1">Your profile is @Model.CompletionPercentage% complete. Complete it to get the most out of your experience!</p>
                <div class="progress mb-2" style="height: 6px;">
                    <div class="progress-bar bg-warning" role="progressbar" 
                         style="width: @Model.CompletionPercentage%" 
                         aria-valuenow="@Model.CompletionPercentage" 
                         aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <a href="@Url.Action("Edit", "Profile")" class="btn btn-sm btn-warning">
                    <i class="fas fa-user-edit"></i> Update Profile
                </a>
            </div>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}