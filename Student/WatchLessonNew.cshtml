@model EasyLearn.Models.Lesson
@{
    ViewData["Title"] = Model.Title;
}

<link rel="stylesheet" href="~/css/course-system.css" />

<div class="container-fluid py-4">
    <div class="row">
        <!-- Video Player Section -->
        <div class="col-lg-8">
            <div class="video-player-container fade-in">
                <div class="video-player-header">
                    <h4 class="video-title">@Model.Title</h4>
                    <div class="video-controls">
                        <button class="video-btn prev" title="Previous Lesson">
                            <i class="fas fa-step-backward"></i>
                        </button>
                        <button class="video-btn next" title="Next Lesson">
                            <i class="fas fa-step-forward"></i>
                        </button>
                        <button class="video-btn fullscreen" title="Fullscreen">
                            <i class="fas fa-expand"></i>
                        </button>
                    </div>
                </div>
                
                <div class="video-wrapper">
                    @if (!string.IsNullOrEmpty(Model.VideoUrl))
                    {
                        var videoId = "";
                        if (Model.VideoUrl.Contains("youtube.com/watch?v="))
                        {
                            videoId = Model.VideoUrl.Split("v=")[1].Split("&")[0];
                        }
                        else if (Model.VideoUrl.Contains("youtu.be/"))
                        {
                            videoId = Model.VideoUrl.Split("youtu.be/")[1].Split("?")[0];
                        }
                        
                        @if (!string.IsNullOrEmpty(videoId))
                        {
                            <iframe src="https://www.youtube.com/embed/@(videoId)?enablejsapi=1&rel=0" 
                                    allowfullscreen 
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture">
                            </iframe>
                        }
                        else
                        {
                            <div class="d-flex align-items-center justify-content-center h-100 bg-dark text-white">
                                <div class="text-center">
                                    <i class="fas fa-exclamation-triangle fa-3x mb-3"></i>
                                    <h5>Invalid Video URL</h5>
                                    <p>Please contact the instructor to fix this issue.</p>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="d-flex align-items-center justify-content-center h-100 bg-dark text-white">
                            <div class="text-center">
                                <i class="fas fa-video fa-3x mb-3"></i>
                                <h5>No Video Available</h5>
                                <p>This lesson doesn't have a video yet.</p>
                            </div>
                        </div>
                    }
                </div>
                
                <div class="video-progress">
                    <div class="progress-bar-container">
                        <div class="progress-bar-fill" style="width: 0%"></div>
                    </div>
                    <div class="progress-text">
                        <span class="current">0:00 / 0:00</span>
                        <span class="completion-status">
                            <i class="fas fa-clock"></i> In Progress
                        </span>
                    </div>
                </div>
            </div>
            
            <!-- Lesson Description -->
            <div class="lesson-description mt-4 fade-in">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-info-circle text-primary me-2"></i>
                            About this lesson
                        </h5>
                        <p class="card-text">@Model.Description</p>
                        
                        @if (!string.IsNullOrEmpty(Model.MaterialUrl))
                        {
                            <div class="mt-3">
                                <a href="@Model.MaterialUrl" class="btn btn-outline-primary" target="_blank">
                                    <i class="fas fa-download me-2"></i>
                                    Download Materials
                                </a>
                            </div>
                        }
                        
                        <div class="lesson-actions mt-3">
                            <button class="btn btn-success" id="markCompleteBtn">
                                <i class="fas fa-check me-2"></i>
                                Mark as Complete
                            </button>
                            
                            <button class="btn btn-outline-secondary ms-2" data-bs-toggle="modal" data-bs-target="#notesModal">
                                <i class="fas fa-sticky-note me-2"></i>
                                Take Notes
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Lesson Playlist Sidebar -->
        <div class="col-lg-4">
            <div class="lesson-playlist slide-up">
                <div class="playlist-header">
                    <i class="fas fa-list-ul me-2"></i>
                    Course Content
                </div>
                
                @{
                    var lessons = ViewBag.Lessons as List<EasyLearn.Models.Lesson> ?? new List<EasyLearn.Models.Lesson>();
                }
                
                @foreach (var lesson in lessons.OrderBy(l => l.OrderIndex))
                {
                    <div class="lesson-item @(lesson.Id == Model.Id ? "active" : "")" 
                         data-lesson-id="@lesson.Id" 
                         data-video-url="@lesson.VideoUrl">
                        
                        <div class="lesson-number">@lesson.OrderIndex</div>
                        
                        <div class="lesson-content">
                            <div class="lesson-title">@lesson.Title</div>
                            <div class="lesson-duration">
                                <i class="fas fa-clock"></i> @lesson.Duration.ToString(@"mm\:ss")
                                @if (!string.IsNullOrEmpty(lesson.MaterialUrl))
                                {
                                    <span class="ms-2">
                                        <i class="fas fa-paperclip"></i>
                                    </span>
                                }
                            </div>
                        </div>
                        
                        <div class="lesson-status">
                            @if (lesson.Id == Model.Id)
                            {
                                <i class="fas fa-play text-primary"></i>
                            }
                            else
                            {
                                <i class="fas fa-circle text-muted"></i>
                            }
                        </div>
                    </div>
                }
            </div>
            
            <!-- Course Progress -->
            <div class="course-progress-card mt-4 slide-up">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="fas fa-chart-line text-success me-2"></i>
                            Your Progress
                        </h6>
                        
                        @{
                            var completedLessons = ViewBag.CompletedLessons as int? ?? 0;
                            var totalLessons = lessons.Count;
                            var progressPercentage = totalLessons > 0 ? (completedLessons * 100.0 / totalLessons) : 0;
                        }
                        
                        <div class="progress mb-2">
                            <div class="progress-bar bg-success" style="width: @progressPercentage%"></div>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <small class="text-muted">@completedLessons of @totalLessons lessons</small>
                            <small class="text-muted">@progressPercentage.ToString("F0")%</small>
                        </div>
                        
                        @if (progressPercentage >= 100)
                        {
                            <div class="mt-3">
                                <a href="/student/certificate/@Model.CourseId" class="btn btn-warning btn-sm w-100">
                                    <i class="fas fa-certificate me-2"></i>
                                    Get Certificate
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
            
            <!-- Course Info -->
            <div class="course-info-card mt-4 slide-up">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="fas fa-graduation-cap text-primary me-2"></i>
                            @Model.Course.Title
                        </h6>
                        
                        <div class="course-meta">
                            <div class="meta-item">
                                <i class="fas fa-user text-muted"></i>
                                <span>@Model.Course.Instructor.FirstName @Model.Course.Instructor.LastName</span>
                            </div>
                            <div class="meta-item">
                                <i class="fas fa-star text-warning"></i>
                                <span>@Model.Course.AverageRating.ToString("F1") rating</span>
                            </div>
                            <div class="meta-item">
                                <i class="fas fa-users text-info"></i>
                                <span>@Model.Course.TotalEnrollments students</span>
                            </div>
                        </div>
                        
                        <div class="mt-3">
                            <a href="/student/course/@Model.CourseId" class="btn btn-outline-primary btn-sm w-100">
                                <i class="fas fa-arrow-left me-2"></i>
                                Back to Course
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Notes Modal -->
<div class="modal fade" id="notesModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-sticky-note me-2"></i>
                    Lesson Notes
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <textarea class="form-control" rows="10" placeholder="Take notes about this lesson..."></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save Notes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://www.youtube.com/iframe_api"></script>
    <script src="~/js/course-system.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mark lesson as complete
            document.getElementById('markCompleteBtn').addEventListener('click', function() {
                const lessonId = @Model.Id;
                
                fetch(`/student/complete-lesson/${lessonId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                })
                .then(response => {
                    if (response.ok) {
                        // Update UI
                        this.innerHTML = '<i class="fas fa-check me-2"></i>Completed!';
                        this.classList.remove('btn-success');
                        this.classList.add('btn-outline-success');
                        this.disabled = true;
                        
                        // Update lesson status in playlist
                        const activeLesson = document.querySelector('.lesson-item.active');
                        if (activeLesson) {
                            activeLesson.classList.add('completed');
                            const statusIcon = activeLesson.querySelector('.lesson-status i');
                            if (statusIcon) {
                                statusIcon.className = 'fas fa-check text-success';
                            }
                        }
                        
                        // Show completion notification
                        showNotification('Lesson completed successfully!', 'success');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('Error marking lesson as complete', 'error');
                });
            });
            
            // Lesson navigation
            document.querySelectorAll('.lesson-item').forEach(item => {
                item.addEventListener('click', function() {
                    const lessonId = this.dataset.lessonId;
                    if (lessonId && lessonId !== '@Model.Id') {
                        window.location.href = `/student/watch/${lessonId}`;
                    }
                });
            });
        });
        
        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.className = `alert alert-${type === 'success' ? 'success' : 'danger'} alert-dismissible fade show position-fixed`;
            notification.style.cssText = 'top: 20px; right: 20px; z-index: 1050; min-width: 300px;';
            notification.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 5000);
        }
    </script>
}