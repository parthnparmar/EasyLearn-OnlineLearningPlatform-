@{
    ViewData["Title"] = "Certificate Verification";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header @(ViewBag.IsValid ? "bg-success" : "bg-danger") text-white text-center">
                    <h4 class="mb-0">
                        <i class="fas @(ViewBag.IsValid ? "fa-check-circle" : "fa-times-circle")"></i>
                        Certificate Verification
                    </h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.IsValid)
                    {
                        var certificate = ViewBag.Certificate as EasyLearn.Models.Certificate;
                        <div class="text-center mb-4">
                            <i class="fas fa-certificate text-success" style="font-size: 4rem;"></i>
                            <h5 class="mt-3 text-success">✓ Certificate Verified</h5>
                            <p class="text-muted">This certificate is authentic and issued by EasyLearn.</p>
                        </div>

                        <div class="certificate-details">
                            <h6>Certificate Details</h6>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Certificate Number:</strong></td>
                                    <td>@certificate.CertificateNumber</td>
                                </tr>
                                <tr>
                                    <td><strong>Student Name:</strong></td>
                                    <td>@certificate.Student.FirstName @certificate.Student.LastName</td>
                                </tr>
                                <tr>
                                    <td><strong>Course Title:</strong></td>
                                    <td>@certificate.Course.Title</td>
                                </tr>
                                <tr>
                                    <td><strong>Issue Date:</strong></td>
                                    <td>@certificate.IssuedAt.ToString("MMMM dd, yyyy")</td>
                                </tr>
                                <tr>
                                    <td><strong>Verification Date:</strong></td>
                                    <td>@DateTime.Now.ToString("MMMM dd, yyyy HH:mm")</td>
                                </tr>
                            </table>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Verification Status:</strong> This certificate has been successfully verified against EasyLearn's database.
                            The certificate holder has completed all required coursework and assessments.
                        </div>
                    }
                    else
                    {
                        <div class="text-center mb-4">
                            <i class="fas fa-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                            <h5 class="mt-3 text-danger">✗ Certificate Not Found</h5>
                            <p class="text-muted">@ViewBag.Message</p>
                        </div>

                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Verification Failed:</strong> The certificate number provided could not be found in our database.
                            Please check the certificate number and try again.
                        </div>

                        <div class="text-center">
                            <p><strong>Possible reasons:</strong></p>
                            <ul class="text-left" style="display: inline-block;">
                                <li>Certificate number was entered incorrectly</li>
                                <li>Certificate may be fraudulent</li>
                                <li>Certificate was not issued by EasyLearn</li>
                            </ul>
                        </div>
                    }

                    <div class="text-center mt-4">
                        <a href="/" class="btn btn-primary">
                            <i class="fas fa-home"></i> Back to Home
                        </a>
                        @if (ViewBag.IsValid)
                        {
                            <button class="btn btn-success" onclick="window.print()">
                                <i class="fas fa-print"></i> Print Verification
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @@media print {
        .btn, .card-header {
            display: none !important;
        }
        .card {
            border: none !important;
            box-shadow: none !important;
        }
    }
</style>